@model FSL.MvcDataAnnotationsHtmlHelpersKnockoutJS.Models.PersonViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Person</h2>

<div id="person">
    @using (Html.BeginForm("Index", "Person", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Create a new person.</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.Person.Name, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.InputFor(x => x.Person.Name)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Person.BithDate, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.InputFor(x => x.Person.BithDate)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Person.Gender, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.SelectFor(x => x.Person.Gender)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Person.Email, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.InputFor(x => x.Person.Email)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Register" />
            </div>
        </div>
    }

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/viewmodels")
}

<script type="text/javascript">
    $(document).ready(function () {
        personViewModel.init(@Html.Raw(Model.ToJson()))
    });
</script>